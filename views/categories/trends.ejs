<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
</head>
<body class="bg-gray-100">
  <%- include('../partials/header') %>
  
  <main class="container mx-auto px-6 py-8">
    <h1 class="text-4xl font-bold mb-8">Trending T-Shirts</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% products.forEach(product => { %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <img src="<%= product.image_url %>" alt="<%= product.name %>" class="w-full h-48 object-cover">
          <div class="p-4">
            <h2 class="text-xl font-semibold mb-2"><%= product.name %></h2>
            <p class="text-gray-600 mb-4"><%= product.description.substring(0, 100) %>...</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold">$<%= product.price.toFixed(2) %></span>
              <a href="/products/<%= product.id %>" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>